{
  "symbols_universe": [
    "AAPL",
    "MSFT",
    "NVDA"
  ],
  "bars": {
    "minute": {
      "window_days": 30,
      "adjusted": true,
      "multiplier": 1,
      "timespan": "minute"
    },
    "day": {
      "window_days": 1825,
      "adjusted": true
    }
  },
  "indicators": {
    "use_api": false,
    "windows": [
      20,
      50,
      200
    ]
  },
  "news": {
    "lookback_days": 7,
    "page_limit": 100,
    "agg": "trimmed_mean",
    "trim_alpha": 0.1
  },
  "triggers": {
    "abs_ret_1d": 0.02,
    "top_n_gainers": 30,
    "top_n_losers": 30
  },
  "risk": {
    "max_pos_pct": 0.1,
    "max_pos_pct_earnings_window": 0.05,
    "max_daily_drawdown_pct": 0.03,
    "atr_pct_high_quantile": 0.8,
    "atr_scale_down": 0.7,
    "min_holding_days": 2
  },
  "execution": {
    "price_guard_bps": 10,
    "twap_slices": 3
  },
  "llm": {
    "provider": "openai-compatible",
    "base_url": "https://api.chatanywhere.tech",
    "analyzer_model": "gpt-4o-mini",
    "decision_model": "gpt-4o-mini",
    "temperature": 0.0,
    "max_tokens": 256,
    "batch_size": 16,
    "seed": 42,
    "timeout_sec": 60,
    "retry": {
      "max_retries": 3,
      "backoff_factor": 0.5
    },
    "cache": {
      "enabled": true,
      "ttl_hours": 24
    },
    "budget": {
      "max_prompt_tokens": 200000,
      "max_completion_tokens": 200000
    },
    "backtest_cache_only": false
  },
  "backtest": {
    "cash": 1000000,
    "commission_bps": 2.0,
    "slippage_bps": 10.0,
    "fill_ratio": 0.8,
    "rebalance_at_open": false,
    "timezone": "UTC",
    "timespan": "day"
  }
}